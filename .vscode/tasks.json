{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Backend (.NET)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/src/Attendr.slnx"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Test Backend (.NET)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/src/Attendr.slnx"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build Frontend (Angular)",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/App"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$tsc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Test Frontend (Angular)",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/App"
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": "$tsc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Serve Frontend (Angular)",
            "type": "shell",
            "command": "npm",
            "args": [
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/App"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete|Compiled successfully"
                    }
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        },
        {
            "label": "Build All",
            "dependsOn": [
                "Build Backend (.NET)",
                "Build Frontend (Angular)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Test All",
            "dependsOn": [
                "Test Backend (.NET)",
                "Test Frontend (Angular)"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}